<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookSearch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/gray_300</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_100</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Warning and error colors -->
        <item name="colorError">@color/red_a700</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar colors -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>

        <item name="textAppearanceHeadline5">@style/TextAppearanceHeadline5Style</item>
        <item name="textAppearanceHeadline6">@style/TextAppearanceHeadline6Style</item>
        <item name="textAppearanceCaption">@style/TextAppearanceCaptionsStyle</item>

    </style>

</resources>